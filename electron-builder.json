{
  "appId": "com.termix.app",
  "productName": "Termix",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*",
    "!**/node_modules/**/*",
    "!src/**/*",
    "!*.md",
    "!tsconfig*.json",
    "!vite.config.ts",
    "!eslint.config.js"
  ],
  "extraMetadata": {
    "main": "electron/main-simple.cjs"
  },
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false,
  "npmRebuild": false,
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": "nsis",
    "forceCodeSigning": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "linux": {
    "category": "Development",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ]
  }
}